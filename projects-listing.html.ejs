<div id="projects-listing-wrp" class="row">
  <div id="projects-listing" class="small-12 large-12 columns">
    <% if (hasOwnProperty('projects') && Object.isArray(projects) && (projects.length > 0)) { %>
      <div class="section-container accordion" data-section="accordion">
        <% projects.each(function(project, index) { %>
          <section>
            <p class="title" data-section-title><a href="#"><%= project.name %></a></p>
            <div class="content" data-section-content>
              <% if (project.hasOwnProperty('details')) { %>
              <% } else { %>
                <span class="label success radius">
                  No additional details
                </span>
              <% } %>
            </div>
          </section>
        <% }); %>
      </div>
    <% } else { %>
      <span class="label alert radius">
        No projects available at the moment
      </span>
    <% } %>
  </div>
</div>
